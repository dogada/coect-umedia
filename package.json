{
  "name": "coect-umedia",
  "version": "0.3.1",
  "description": "Universal media for Coect communication platform (blogs, comments, communities, etc.)",
  "main": "server/index.js",
  "browser": "client/index.js",
  "browserify": {
    "transform": [
      "riotify",
      [
        "babelify"
      ]
    ]
  },
  "browserify-shim": {},
  "scripts": {
    "test": "npm run test:client",
    "pretest": "npm run build:test",
    "test:client": "karma start --single-run",
    "build:test": "browserify client/test/main.js > build/test/main.js",
    "build:tags": "riot client/tags build/tags",
    "build": "npm run build:test",
    "watch": "nodemon -w ./client -e js,tag --exec npm run build:tags",
    "tdd": "npm run watch & karma start --browsers=Chrome --no-single-run"
  },
  "keywords": [
    "coect",
    "umedia",
    "media",
    "blog",
    "comments"
  ],
  "author": "Dmytro V. Dogadailo <dvd@dogada.org>",
  "license": "GPL-2.0",
  "dependencies": {
    "coect": "~0.1.3",
    "debug": "~2.2.0",
    "escape-html": "~1.0.3",
    "html-tag": "~0.2.1",
    "linkify-it": "~1.2.0",
    "lodash": "^3.10.1",
    "moment": "~2.10.6",
    "object-apply": "~1.0.1",
    "object-assign": "~4.0.1",
    "tflow": "^0.4.1",
    "wpml": "^0.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dogada/coect-umedia.git"
  },
  "bugs": {
    "url": "https://github.com/dogada/coect-umedia/issues"
  },
  "homepage": "http://www.coect.net/",
  "directories": {
    "test": "test"
  },
  "devDependencies": {
    "browserify": "~12.0.1",
    "browserify-istanbul": "~0.2.1",
    "coect-site": "~0.1.4",
    "jquery": "~2.1.4",
    "riot": "~2.3.11"
  }
}
